<% include partials/header %>
<div class="ui main text container">
    <div class="ui top huge header">RESTful Blog App</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(b){ %>
            <div class="item">
                <div class="image">
                    <img src="<%= b.image %>">
                </div>
                <div class="content">
                   <a class="header" href="/blogs/<%= b._id %>"><%= b.title %></a> 
                    <div class="meta">
                       <span><%= b.created.toDateString() %></span> 
                    </div>
                    <div class="description">
                        <p><%- b.body.substring(0,100) %>....</p>    
                    </div>
                    <div class="extra">
                        <a class="ui basic floated violet button" href="/blogs/<%= b._id %>">
                            Read Blog<i class="right chevron icon"></i>
                        </a>
                    </div>
                </div>    
            </div>
            <% }); %>
        </div>
    </div>
</div>



<% include partials/footer %>